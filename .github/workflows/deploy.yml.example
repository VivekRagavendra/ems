# Example GitHub Actions workflow for CI/CD with OpenTofu and Terragrunt
# Copy to .github/workflows/deploy.yml and configure

name: Deploy EKS App Controller

on:
  push:
    branches: [main]
  workflow_dispatch:

env:
  AWS_REGION: us-east-1
  OPENTOFU_VERSION: 1.6.0
  TERRAGRUNT_VERSION: 0.50.0

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
      - uses: actions/checkout@v3
      
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ env.AWS_REGION }}
      
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      
      - name: Install Python dependencies
        run: |
          pip install -r requirements.txt
      
      - name: Package Lambda functions
        run: |
          chmod +x scripts/deploy-lambdas.sh
          ./scripts/deploy-lambdas.sh
      
      - name: Install OpenTofu
        run: |
          wget https://github.com/opentofu/opentofu/releases/download/v${OPENTOFU_VERSION}/tofu_${OPENTOFU_VERSION}_linux_amd64.zip
          unzip tofu_${OPENTOFU_VERSION}_linux_amd64.zip
          sudo mv tofu /usr/local/bin/
          tofu version
      
      - name: Install Terragrunt
        run: |
          wget https://github.com/gruntwork-io/terragrunt/releases/download/v${TERRAGRUNT_VERSION}/terragrunt_linux_amd64
          chmod +x terragrunt_linux_amd64
          sudo mv terragrunt_linux_amd64 /usr/local/bin/terragrunt
          terragrunt --version
      
      - name: Terragrunt Init
        working-directory: infrastructure
        run: terragrunt init
      
      - name: Terragrunt Plan
        working-directory: infrastructure
        run: terragrunt plan -out=tfplan
        continue-on-error: true
      
      - name: Terragrunt Apply
        working-directory: infrastructure
        run: terragrunt apply -auto-approve tfplan
      
      - name: Build UI
        working-directory: ui
        run: |
          npm install
          echo "VITE_API_URL=${{ secrets.API_GATEWAY_URL }}" > .env.production
          npm run build
      
      - name: Deploy UI to S3
        run: |
          aws s3 sync ui/dist/ s3://${{ secrets.S3_BUCKET }}/ --delete
      
      - name: Invalidate CloudFront
        if: env.CLOUDFRONT_DIST_ID != ''
        run: |
          aws cloudfront create-invalidation \
            --distribution-id ${{ secrets.CLOUDFRONT_DIST_ID }} \
            --paths "/*"
